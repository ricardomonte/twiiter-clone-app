<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweeets/form' %>
    </div>
  </article>


  <% @tweeets.each do |t| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>Ricardo Montenegro</strong>
            <small>@sapica</small>
            <p><%= t.tweeet %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to t, class: 'level-item' do %>
                <span><small>back</small></span>
              <% end %>
              <%= link_to edit_tweeet_path(t), class: 'level-item' do %>
                <span><small>edit</small></span>
              <% end %>
              <%= link_to t, method: :delete, data: {confirm: "Are you sure you want to delete this tweeet?"}, class: 'level-item' do %>
                <span><small>delete</small></span>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>