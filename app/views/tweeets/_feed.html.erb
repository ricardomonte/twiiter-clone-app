<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      
      <div class="media-content">
        <%= render 'tweeets/form' %>
      </div>
      
    </article>
  <% end %>


  <% @tweeets.each do |t| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(t.user.email, size: 64, alt: t.user.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= t.user.name %></strong>
            <small><%= t.user.username %></small>
            <p><%= t.tweeet %></p>
          </div>
          <% if user_signed_in? and current_user.username == t.user.username %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to t, class: 'level-item' do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_tweeet_path(t), class: 'level-item' do %>
                  <span class="icon"><i class="fa fa-edit" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to t, method: :delete, data: {confirm: "Are you sure you want to delete this tweeet?"}, class: 'level-item' do %>
                  <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>