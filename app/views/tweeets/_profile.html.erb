<div class="box is-one-quarter">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, :gravatar => { :size => 64 }, :alt => current_user.name) %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <strong><%= current_user.name %></strong><br/>
        <small><%= current_user.username %></small>
      </div>
    </div>
  </article>
</div>